---
// Structured Data (JSON-LD) for BareCanvas SEO Optimization
// This component generates schema markup for local business and services

// Local business information
const businessInfo = {
  name: "BareCanvas",
  address: "2743 Smith Ranch Rd, Suite 804, Pearland, TX 77584",
  phone: "(832) 570-9458",
  email: "info@barecanvastx.com",
  website: "https://barecanvastx.com",
  description: "Professional waxing services in Pearland, TX. Expert hair removal with personalized care and premium products for smooth, confident skin.",
  openingHours: [
    "Mo-Fr 09:00-19:00",
    "Sa 09:00-17:00",
    "Su 10:00-16:00"
  ],
  services: [
    "Full Body Waxing",
    "Facial Waxing",
    "Eyebrow Shaping", 
    "Brazilian Waxing",
    "Leg Waxing",
    "Arm Waxing",
    "Back Waxing",
    "Chest Waxing"
  ],
  priceRange: "$$"
};

// Generate the structured data based on page context
const { page = "home" } = Astro.props;
---

<!-- Local Business Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${businessInfo.website}/#business`,
  "name": businessInfo.name,
  "image": [
    `${businessInfo.website}/images/barecanvas-exterior.jpg`,
    `${businessInfo.website}/images/barecanvas-interior.jpg`,
    `${businessInfo.website}/images/barecanvas-service-room.jpg`
  ],
  "description": businessInfo.description,
  "url": businessInfo.website,
  "telephone": businessInfo.phone,
  "email": businessInfo.email,
  "priceRange": businessInfo.priceRange,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "2743 Smith Ranch Rd, Suite 804",
    "addressLocality": "Pearland",
    "addressRegion": "TX",
    "postalCode": "77584",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 29.5635,
    "longitude": -95.3698
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "09:00",
      "closes": "19:00"
    },
    {
      "@type": "OpeningHoursSpecification", 
      "dayOfWeek": "Saturday",
      "opens": "09:00",
      "closes": "17:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Sunday", 
      "opens": "10:00",
      "closes": "16:00"
    }
  ],
  "sameAs": [
    "https://www.facebook.com/barecanvastx",
    "https://www.instagram.com/barecanvastx",
    "https://www.yelp.com/biz/barecanvas-pearland"
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "127",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating", 
        "ratingValue": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Sarah M."
      },
      "reviewBody": "Amazing experience! Professional, clean, and the results are perfect. Highly recommend BareCanvas for anyone looking for quality waxing services."
    },
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5" 
      },
      "author": {
        "@type": "Person",
        "name": "Jessica L."
      },
      "reviewBody": "Best waxing place in Pearland! The staff is so friendly and knowledgeable. Clean facility and great results every time."
    }
  ]
})}>
</script>

<!-- Beauty Salon Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BeautySalon",
  "@id": `${businessInfo.website}/#salon`,
  "name": businessInfo.name,
  "alternateName": "BareCanvas Waxing Studio",
  "description": "Premier waxing salon in Pearland, TX specializing in professional hair removal services for all body areas with personalized care and attention.",
  "url": businessInfo.website,
  "image": `${businessInfo.website}/images/barecanvas-logo.png`,
  "telephone": businessInfo.phone,
  "email": businessInfo.email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "2743 Smith Ranch Rd, Suite 804",
    "addressLocality": "Pearland", 
    "addressRegion": "TX",
    "postalCode": "77584",
    "addressCountry": "US"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Waxing Services",
    "itemListElement": businessInfo.services.map((service, index) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service,
        "description": `Professional ${service.toLowerCase()} service with premium wax and expert technique.`
      }
    }))
  }
})}>
</script>

<!-- Service Schema for Services Page -->
{page === "services" && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "BareCanvas Waxing Services",
    "description": "Comprehensive waxing services offered at BareCanvas in Pearland, TX",
    "itemListElement": [
      {
        "@type": "Service",
        "@id": `${businessInfo.website}/services/#full-body-waxing`,
        "name": "Full Body Waxing",
