          "availability": "https://schema.org/InStock",
          "priceRange": "$$"
        }
      },
      {
        "@type": "Service", 
        "@id": `${businessInfo.website}/services/#brazilian-waxing`,
        "name": "Brazilian Waxing",
        "description": "Professional Brazilian wax service with experienced technicians and premium wax.",
        "provider": {
          "@type": "LocalBusiness",
          "name": businessInfo.name
        },
        "areaServed": {
          "@type": "City",
