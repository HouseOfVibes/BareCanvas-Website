<style>
  .hero-simple {
    background: linear-gradient(135deg, var(--warm-cream) 0%, var(--cream-accents) 100%);
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .hero-simple h1 {
    font-size: 3rem;
    color: var(--deep-brown);
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .hero-content {
    text-align: center;
    margin: 0 auto;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--warm-brown);
    max-width: 600px;
    margin: 0 auto;
  }

  .service-category {
    margin-bottom: 4rem;
  }

  .category-title {
    font-size: 2.5rem;
    color: var(--deep-brown);
    font-family: var(--font-heading);
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .category-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: var(--muted-gold);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .service-item {
    background: var(--warm-cream);
    padding: 2rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--cream-accents);
    transition: all var(--transition-fast);
  }

  .service-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(74, 53, 40, 0.1);
    border-color: var(--muted-gold);
  }

  .service-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .service-item h3 {
    font-size: 1.4rem;
    color: var(--deep-brown);
    font-family: var(--font-heading);
    margin: 0;
  }

  .price {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--muted-gold);
  }

  .service-item p {
    color: var(--warm-brown);
    line-height: 1.6;
    font-size: 1rem;
    margin: 0;
  }

  .product-info {
    background: var(--cream-accents);
    padding: 3rem;
    border-radius: var(--border-radius);
    text-align: center;
  }

  .product-info p {
    font-size: 1.1rem;
    color: var(--warm-brown);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .product-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .feature {
    background: var(--warm-cream);
    padding: 1rem;
    border-radius: 8px;
    color: var(--deep-brown);
    font-weight: 500;
  }

  .cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--cream-accents) 0%, var(--light-beige) 100%);
    border-radius: var(--border-radius);
  }

  .cta-section h2 {
    font-size: 2.5rem;
    color: var(--deep-brown);
    font-family: var(--font-heading);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.2rem;
    color: var(--warm-brown);
    margin-bottom: 2rem;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero-simple h1 {
      font-size: 2.5rem;
    }

    .hero-simple {
      padding: 4rem 0 3rem;
    }

    .category-title {
      font-size: 2rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-item {
      padding: 1.5rem;
    }

    .product-info {
      padding: 2rem;
    }

    .product-features {
      grid-template-columns: 1fr;
    }

    .cta-section {
      padding: 3rem 1rem;
    }

    .cta-section h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .hero-simple h1 {
      font-size: 2rem;
    }

    .service-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>