<script>
  function toggleServices(sectionId: string) {
    const section = document.getElementById(sectionId);
    const button = document.querySelector(`[onclick="toggleServices('${sectionId}')"]`) as HTMLButtonElement;
    const icon = button?.querySelector('.expand-icon') as SVGElement;
    const span = button?.querySelector('span') as HTMLSpanElement;
    
    if (section && button && icon && span) {
      if (section.style.display === 'none') {
        section.style.display = 'block';
        icon.style.transform = 'rotate(180deg)';
        span.textContent = span.textContent?.replace('View All', 'Hide') || '';
      } else {
        section.style.display = 'none';
        icon.style.transform = 'rotate(0deg)';
        span.textContent = span.textContent?.replace('Hide', 'View All') || '';
      }
    }
  }
</script>

