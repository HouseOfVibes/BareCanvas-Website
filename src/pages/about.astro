<script>
  // Duplicate cards for seamless infinite scroll
  document.addEventListener('DOMContentLoaded', () => {
    const testimonialsScroll = document.getElementById('testimonials-scroll');
    const expertiseScroll = document.getElementById('expertise-scroll');
    
    function duplicateCards(container: HTMLElement) {
      const cards = Array.from(container.children) as HTMLElement[];
      cards.forEach(card => {
        const clone = card.cloneNode(true) as HTMLElement;
        container.appendChild(clone);
      });
    }
    
    if (testimonialsScroll) {
      duplicateCards(testimonialsScroll);
    }
    
    if (expertiseScroll) {
      duplicateCards(expertiseScroll);
    }
    
    // Add touch/mouse interaction for horizontal scrolling
    function addHorizontalScrolling(container: HTMLElement) {
      let isDown = false;
      let startX: number;
      let scrollLeft: number;
      
      container.addEventListener('mousedown', (e) => {
        isDown = true;
        startX = e.pageX - container.offsetLeft;
        scrollLeft = container.scrollLeft;
        container.style.cursor = 'grabbing';
        container.style.animationPlayState = 'paused';
      });
      
      container.addEventListener('mouseleave', () => {
        isDown = false;
        container.style.cursor = 'grab';
        container.style.animationPlayState = 'running';
      });
      
      container.addEventListener('mouseup', () => {
        isDown = false;
        container.style.cursor = 'grab';
        container.style.animationPlayState = 'running';
      });
      
      container.addEventListener('mousemove', (e) => {
        if (!isDown) return;
        e.preventDefault();
        const x = e.pageX - container.offsetLeft;
        const walk = (x - startX) * 2;
        container.scrollLeft = scrollLeft - walk;
      });
      
      container.style.cursor = 'grab';
    }
    
    if (testimonialsScroll) {
      addHorizontalScrolling(testimonialsScroll);
    }
    
    if (expertiseScroll) {
      addHorizontalScrolling(expertiseScroll);
    }
    
    // Scroll indicators functionality
    const scrollDots = document.querySelectorAll('.scroll-dot');
    let currentIndex = 0;
    
    function updateScrollIndicators() {
      scrollDots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
    }
    
    // Auto-update scroll indicators based on scroll position
    if (testimonialsScroll) {
      testimonialsScroll.addEventListener('scroll', () => {
        const scrollLeft = testimonialsScroll.scrollLeft;
        const cardWidth = 370; // 350px + 20px gap
        const newIndex = Math.round(scrollLeft / cardWidth) % 3;
        if (newIndex !== currentIndex) {
          currentIndex = newIndex;
          updateScrollIndicators();
        }
      });
    }
    
    // Click handlers for scroll dots
    scrollDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentIndex = index;
        updateScrollIndicators();
        if (testimonialsScroll) {
          const cardWidth = 370;
          testimonialsScroll.scrollTo({
            left: index * cardWidth,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>