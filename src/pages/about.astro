<style>
  .hero-section {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--warm-cream) 0%, var(--light-beige) 50%, #f0e6d6 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-background-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 700px;
    height: 700px;
    background-image: url('/images/Bare-Canvas-TP-Logo.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.25;
    z-index: 1;
    filter: sepia(80%) saturate(150%) hue-rotate(25deg) brightness(1.1);
    animation: logoFloat 8s ease-in-out infinite;
  }

  @keyframes logoFloat {
    0%, 100% { 
      transform: translate(-50%, -50%) rotate(0deg) scale(1);
      opacity: 0.25;
    }
    50% { 
      transform: translate(-50%, -50%) rotate(2deg) scale(1.05);
      opacity: 0.35;
    }
  }

  .hero-gold-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 80% 20%, #d4af37 0%, transparent 25%),
                radial-gradient(circle at 20% 80%, var(--muted-gold) 0%, transparent 20%);
    opacity: 0.06;
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
  }

  .gold-accent-line {
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--muted-gold), #d4af37, var(--muted-gold));
    border-radius: 2px;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
  }

  .hero-content h1 {
    font-family: 'Playfair Display', serif;
    font-size: 3.5rem;
    font-weight: 400;
    color: var(--deep-brown);
    margin-bottom: 0.5rem;
    line-height: 1.1;
    position: relative;
    text-shadow: 0 2px 4px rgba(74, 53, 40, 0.1);
  }

  .gold-highlight {
    width: 120px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--muted-gold), #d4af37, var(--muted-gold), transparent);
    margin: 0.5rem 0 1.5rem 0;
    border-radius: 2px;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0.6; transform: scaleX(1); }
    50% { opacity: 1; transform: scaleX(1.1); }
  }

  .hero-subtitle {
    font-size: 1.4rem;
    color: var(--warm-brown);
    margin-bottom: 1.5rem;
    font-weight: 500;
    position: relative;
  }

  .hero-subtitle::before {
    content: '"';
    color: var(--muted-gold);
    font-size: 2rem;
    position: absolute;
    left: -1rem;
    top: -0.5rem;
    font-family: 'Playfair Display', serif;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--warm-brown);
    line-height: 1.6;
    max-width: 500px;
    margin-bottom: 2rem;
  }

  .hero-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
  }

  .badge {
    background: linear-gradient(135deg, var(--muted-gold), #d4af37);
    color: var(--deep-brown);
    padding: 0.8rem 1.5rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-fast);
  }

  .badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.6s ease;
  }

  .badge:hover::before {
    left: 100%;
  }

  .badge:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-section .container {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 4rem;
    align-items: center;
  }

  .hero-image {
    position: relative;
    z-index: 3;
  }

  .image-frame {
    position: relative;
    padding: 8px;
    background: linear-gradient(145deg, var(--muted-gold), #d4af37, #b8956a);
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(74, 53, 40, 0.2);
  }

  .gold-border {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, var(--muted-gold), #d4af37, var(--muted-gold));
    border-radius: 22px;
    z-index: -1;
    animation: goldGlow 4s ease-in-out infinite;
  }

  @keyframes goldGlow {
    0%, 100% { 
      box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
      opacity: 0.8;
    }
    50% { 
      box-shadow: 0 0 40px rgba(212, 175, 55, 0.6);
      opacity: 1;
    }
  }

  .image-placeholder {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
    background: white;
    position: relative;
  }

  .image-placeholder svg {
    width: 100%;
    height: 100%;
  }

  .image-placeholder::after {
    content: '';
    position: absolute;
    top: 10px;
    right: 10px;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--muted-gold), #d4af37);
    border-radius: 50%;
    opacity: 0.7;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .about-content {
    padding: 6rem 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 4rem;
  }

  .content-section {
    margin-bottom: 3rem;
  }

  .content-section h2 {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    color: var(--deep-brown);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .content-section h3 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: var(--deep-brown);
    margin-bottom: 1.5rem;
  }

  .content-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--warm-brown);
    margin-bottom: 1.5rem;
  }

  .approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .approach-item {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(74, 53, 40, 0.08);
    border: 1px solid rgba(196, 163, 115, 0.2);
  }

  .approach-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 1rem;
