  </section>

  <!-- Booking CTA -->
  <section class="section section-accent">
    <div class="container">
      <div class="booking-cta animate-on-scroll fade-up">
        <h2>Ready to Book Your Service?</h2>
        <p>Experience professional waxing in a comfortable, welcoming environment</p>
        <div class="cta-buttons">
          <a href="https://www.vagaro.com/barecanvas/services" class="btn btn-primary" target="_blank" rel="noopener">Book Online</a>
          <a href="/contact" class="btn btn-secondary">Contact Us</a>
        </div>
        <p class="offer-text">New clients receive 15% off their first service</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .services-hero {
    background: linear-gradient(135deg, var(--light-beige) 0%, var(--warm-cream) 100%);
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .services-hero h1 {
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--warm-brown);
    max-width: 600px;
    margin: 0 auto;
  }

  .services-nav {
    padding: 2rem 0;
    position: sticky;
    top: 80px;
    z-index: 100;
    background: var(--light-beige);
    border-bottom: 1px solid var(--warm-stone);
  }

  .service-categories {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .category-link {
    text-decoration: none;
    color: var(--deep-brown);
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    transition: all var(--transition-fast);
    position: relative;
  }

  .category-link:hover,
  .category-link.active {
    background: var(--muted-gold);
    color: var(--deep-brown);
    transform: translateY(-2px);
  }

  .section-intro {
    text-align: center;
    font-size: 1.1rem;
    color: var(--warm-brown);
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .services-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .services-grid.grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }

  .services-grid.grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .service-card {
    background: white;
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(74, 53, 40, 0.08);
    transition: all var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .service-card.featured {
    border: 2px solid var(--muted-gold);
    transform: scale(1.02);
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--muted-gold), var(--deep-brown));
    transform: scaleX(0);
    transition: transform var(--transition-fast);
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(74, 53, 40, 0.15);
  }

  .service-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--cream-accents);
  }

  .service-header h3 {
    color: var(--deep-brown);
    font-size: 1.5rem;
    margin: 0;
  }

  .service-price {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--muted-gold);
    font-family: var(--font-heading);
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .service-features li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--warm-brown);
  }

  .service-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--muted-gold);
    font-weight: bold;
  }

  .service-note {
    background: var(--cream-accents);
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1.5rem;
    font-size: 0.95rem;
  }

  .service-note strong {
    color: var(--deep-brown);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: white;
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(74, 53, 40, 0.08);
    text-align: center;
    transition: all var(--transition-fast);
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(74, 53, 40, 0.12);
  }

  .product-icon {
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--light-beige);
  }

  .product-brand {
    color: var(--muted-gold);
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .product-features {
    text-align: left;
    margin-top: 1rem;
  }

  .product-features li {
    font-size: 0.9rem;
    padding: 0.25rem 0;
  }

  .booking-cta {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .booking-cta h2 {
    margin-bottom: 1rem;
  }

  .booking-cta p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .offer-text {
    color: var(--muted-gold);
    font-style: italic;
    font-weight: 500;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .services-hero {
      padding: 4rem 0 3rem;
    }

    .service-categories {
      gap: 1rem;
      padding: 0 1rem;
    }

    .category-link {
      padding: 0.6rem 1.2rem;
      font-size: 0.9rem;
    }

    .services-grid.grid-2,
    .services-grid.grid-3 {
      grid-template-columns: 1fr;
    }

    .service-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .service-price {
      font-size: 1.5rem;
    }

    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Smooth scrolling for service category links
  document.querySelectorAll('.category-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href').substring(1);
      const targetElement = document.getElementById(targetId);
      if (targetElement) {
        const offset = 120; // Account for sticky navigation
        const targetPosition = targetElement.offsetTop - offset;
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
        
        // Update active link
        document.querySelectorAll('.category-link').forEach(l => l.classList.remove('active'));
        link.classList.add('active');
      }
    });
  });

  // Update active link on scroll
  window.addEventListener('scroll', () => {
    const sections = ['brazilian', 'bikini', 'facial', 'body', 'products'];
    const offset = 150;
    
    sections.forEach(sectionId => {
      const section = document.getElementById(sectionId);
      const link = document.querySelector(`a[href="#${sectionId}"]`);
      
      if (section && link) {
        const rect = section.getBoundingClientRect();
        if (rect.top <= offset && rect.bottom >= offset) {
          document.querySelectorAll('.category-link').forEach(l => l.classList.remove('active'));
          link.classList.add('active');
        }
      }
    });
  });
</script>